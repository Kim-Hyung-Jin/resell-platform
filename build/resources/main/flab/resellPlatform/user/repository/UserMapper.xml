<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="flab.resellPlatform.userEntity.repository.UserMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into userEntity (username, password, phoneNumber, name, nickname, email, shoeSize)
        values (#{username}, #{password}, #{phoneNumber}, #{name}, #{nickname}, #{email}, #{shoeSize})
    </insert>

    <select id="findById" resultType="User">
        select *
        from userEntity
        where id = #{id}
    </select>

    <select id="findAll" resultType="User">
        select *
        from userEntity
    </select>
</mapper>